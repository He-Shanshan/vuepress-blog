$accentColor = #ea9518
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34
$badgeTipColor = #42b983
$badgeWarningColor = darken(#ffe564, 35%)
$badgeErrorColor = #DA5961
.navbar .site-name {
    font-size: 1rem;
    text-align:center;
    color: #ea9518;
}
.home{
    padding:0;
}
.home .hero h1{
    font-size:2rem;
    color:#ea9518;
}
.home .hero .description{
    max-width: 35rem;
    font-size: 1rem;
    line-height: 1.3;
    color: #000;
}
.home .hero .action-button{
    display: inline-block;
    font-size: 1rem;
    color: #fff;
    background: linear-gradient(#f4ea29, #efb336);
    padding: 0.2rem 1rem;
    border-radius: 4px;
    -webkit-transition: background-color 0.1s ease;
    transition: background-color 0.1s ease;
    box-sizing: border-box;
    border-bottom: 1px solid #efb336;
}
.sidebar-heading ::before{
    height: 1rem;
    min-width: 1rem;
    vertical-align: middle;
    display: inline-block;
    content: '';
    background: url('/blog/img/sidebar.png') no-repeat;
    background-size: 100%;
}
.sidebar-heading span:first-child ::before{
    height: 1rem;
    min-width: 1rem;
    vertical-align: middle;
    display: inline-block;
    content: '';
    background: url('/blog/img/sidebar.png') no-repeat;
    background-size: 100%;
}
.dropdown-wrapper .nav-dropdown{
    height: auto !important;
    box-sizing: border-box;
    max-height: calc(100vh - 2.7rem);
    overflow-y: auto;
    position: absolute;
    top: 100%;
    right: 0;
    background-color: rgba(255,255,255,0.4);;
    opacity:0.5;
    padding: 0.6rem 0;
    border: 2px solid #ece522;
    text-align: left;
    border-radius: 2rem;
    white-space: nowrap;
    margin: 0;
    color:#000;
    box-shadow: 10px 10px 5px #888888;
}
.arrow.down{
    border:none;
}
.arrow.right{
    border:none;
}
.theme-container{
    background: url('/blog/img/background.png') no-repeat center center fixed;
    background-size:cover;
}


